  <script>
    function playMusic() {
      const music = document.getElementById('bg-music');
      const button = document.getElementById('playMusicBtn');
      music.play().then(() => {
        button.style.display = 'none';
      }).catch(err => {
        console.log('Music play failed:', err);
      });
    }

    const messages = [
      'Thank you for every sacrifice, Mom üíï',
      'Your love is endless üíñ',
      'Forever grateful for you, Mom üå∏',
      'You are my strength and my peace üïäÔ∏è',
      'Thank you for believing in me ‚ú®',
      'Your hugs are magic! üí´',
      'The light in my life üåü',
      'I love you more than words üíû',
      'Home is where Mom is üè°',
      'My first friend, my best friend üë©‚Äçüëß'
    ];

    const imgs = document.querySelectorAll('.heart-gallery img:not(.center-image)');
    const overlay = document.getElementById('overlay');

    imgs.forEach((img, i) => {
      const popup = document.createElement('div');
      popup.className = 'popup-text';
      popup.innerText = messages[i];
      document.body.appendChild(popup);

      img.addEventListener('click', () => {
        const isEnlarged = img.classList.toggle('enlarged');
        document.body.classList.toggle('blurred', isEnlarged);
        overlay.style.display = isEnlarged ? 'block' : 'none';

        if (isEnlarged) {
          const rect = img.getBoundingClientRect();
          popup.style.top = `${rect.top + window.scrollY - 60}px`;
          popup.style.left = `${rect.left + rect.width / 2 - 100}px`;
          popup.style.display = 'block';
        } else {
          popup.style.display = 'none';
        }
      });
    });

    overlay.addEventListener('click', () => {
      document.querySelectorAll('.heart-gallery img.enlarged').forEach(img => img.classList.remove('enlarged'));
      document.querySelectorAll('.popup-text').forEach(popup => popup.style.display = 'none');
      overlay.style.display = 'none';
      document.body.classList.remove('blurred');
    });

    // Falling hearts animation
    const canvas = document.getElementById('heartCanvas');
    const ctx = canvas.getContext('2d');

    let hearts = [];
    const heartChars = ['‚ù§Ô∏è', 'üíñ', 'üíï', 'üíò', 'üíó'];

    function resizeCanvas() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    }
    resizeCanvas();
    window.addEventListener('resize', resizeCanvas);

    function createHeart() {
      return {
        x: Math.random() * canvas.width,
        y: -20,
        size: Math.random() * 20 + 10,
        speed: Math.random() * 1 + 0.5,
        opacity: Math.random() * 0.5 + 0.5,
        drift: (Math.random() - 0.5) * 0.5,
        char: heartChars[Math.floor(Math.random() * heartChars.length)]
      };
    }

    function drawHeart(x, y, size, opacity, char) {
      ctx.globalAlpha = opacity;
      ctx.font = `${size}px Arial`;
      ctx.fillText(char, x, y);
      ctx.globalAlpha = 1;
    }

    function animateHearts() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      hearts.forEach((heart, index) => {
        heart.y += heart.speed;
        heart.x += heart.drift;
        drawHeart(heart.x, heart.y, heart.size, heart.opacity, heart.char);
        if (heart.y > canvas.height + 30) {
          hearts[index] = createHeart();
        }
      });
      requestAnimationFrame(animateHearts);
    }

    for (let i = 0; i < 60; i++) {
      hearts.push(createHeart());
    }
    animateHearts();
  </script>
